#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data"
mkdir -p "$DIR"
PIDS=()  # Store background process IDs

fetch_pokemon() {
    pokemon=$1
    echo "Fetching data for $pokemon..."
    curl -s -f "https://pokeapi.co/api/v2/pokemon/${pokemon}" -o "$DIR/${pokemon}.json"
    if [ $? -eq 0 ]; then
        echo "Saved data to $DIR/${pokemon}.json âœ…"
    else
        echo "Error: Failed to fetch data for $pokemon" >> errors.txt
    fi
}

# Start background processes
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$pokemon" &
    PIDS+=($!)  # Track PID
done

jobs

# Example of how you could clean up jobs
for pid in "${PIDS[@]}"; do
    if ! kill -0 "$pid" 2>/dev/null; then
        echo "Warning: Process $pid is not running."
    fi
done

# Wait for all background jobs
wait
echo "All background fetch processes completed."
