#!/bin/bash

# Extract required fields using jq
name=$(jq -r '.name' data.json)
type=$(jq -r '.types[0].type.name' data.json)
height=$(jq '.height' data.json)
weight=$(jq '.weight' data.json)

# Convert first letters to uppercase
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# Convert decimeters to meters and hectograms to kilograms
height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
weight_kg=$(awk "BEGIN {printf \"%.0f\", $weight / 10}")

# Print in required format
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."
