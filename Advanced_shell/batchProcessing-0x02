#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data"
mkdir -p "$DIR"

for pokemon in "${POKEMON_LIST[@]}"
do
    echo "Fetching data for $pokemon..."
    success=0
    for attempt in {1..3}
    do
        response=$(curl -s -f "https://pokeapi.co/api/v2/pokemon/${pokemon}")
        if [ $? -eq 0 ]; then
            echo "$response" > "$DIR/${pokemon}.json"
            echo "Saved data to $DIR/${pokemon}.json âœ…"
            success=1
            break
        else
            echo "Attempt $attempt failed for $pokemon" >> errors.txt
            sleep 1
        fi
    done
    if [ $success -ne 1 ]; then
        echo "Failed to fetch data for $pokemon after 3 attempts." >> errors.txt
    fi
    sleep 1
done
